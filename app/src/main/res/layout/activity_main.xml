<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/color1"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/pantallaTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible"
            android:background="@color/white"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/imgTitulo"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:src="@drawable/icono"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pantallaBotones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:background="@color/white"
            android:layout_margin="5dp">

            <TextView
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¡Bienvenido, fiera!"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/rutinaHoyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rutina de hoy"
                android:textSize="20dp"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:backgroundTint="@color/color1"/>

            <Button
                android:id="@+id/ejerciciosBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ejercicios"
                android:textSize="20dp"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:backgroundTint="@color/color1"/>

            <Button
                android:id="@+id/estiramientosBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estiramientos"
                android:textSize="20dp"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:backgroundTint="@color/color1"/>

            <Button
                android:id="@+id/crearRutinaBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crea tu rutina"
                android:textSize="20dp"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:backgroundTint="@color/color1"/>

            <Button
                android:id="@+id/rutinasBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mis Rutinas"
                android:textSize="20dp"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:backgroundTint="@color/color1"/>






        </LinearLayout>
    </LinearLayout>

</LinearLayout>